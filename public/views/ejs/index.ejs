<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>WebSockets</title>
    <script src="/socket.io/socket.io.js"></script>
</head>

<body>
    <section>
        <div style="position: fixed; top: 20px; left: 20px;">
            <h2>Agregar producto</h2>
            <form action="/productos" method="post" onsubmit="return addProduct()">
                <label for="title">Nombre producto:</label><br>
                <input type="text" id="title" name="title">
                <br>
                <label for="price">Precio:</label><br>
                <input type="text" id="price" name="price">
                <br>
                <label for="imagen">Url de la imagen:</label><br>
                <input type="text" id="imagen" name="imagen">
                <br>
                <button>Enviar</button>
            </form>
        </div>

        <div style="position: fixed; bottom: 20px; right: 20px;">
            <h1>Mensajer√≠a</h1>
            <div id="messages_container"></div>
            <form onsubmit="return addMessage(new Date())" autocomplete="off">
                <br>
                <input type="text" id="username" placeholder="Mail">
                <br>
                <input type="text" id="texto" placeholder="Mensaje">
                <br>
                <input type="submit" value="Enviar">
            </form>
        </div>


        <div>
            <h1 style="display:flex; justify-content: center; margin:50px">Lista de productos</h1>

            <section id="product_container" style="display:flex; justify-content: center; column-gap: 30px; flex-wrap: wrap; margin: 30px">

            </section>
        </div>
    </section>



    <script src="js/main.js"></script>

</body>

</html>